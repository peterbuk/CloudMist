DROP TABLE IF EXISTS friend_of;
CREATE TABLE friend_of (f1_user VARCHAR(20), f2_user VARCHAR(20), FOREIGN KEY (f2_user) REFERENCES gamer(g_user), FOREIGN KEY (f1_user) REFERENCES gamer(g_user));

DROP TABLE IF EXISTS game_list;
CREATE TABLE game_list (game_id INT, g_user VARCHAR(20), FOREIGN KEY (g_user) REFERENCES gamer(g_user), FOREIGN KEY (game_id) REFERENCES game(game_id), PRIMARY KEY(game_id, g_user));
